spring:
  datasource:
    url: jdbc:mysql://{{ cluster_address.value }}:{{ cluster_port.value }}/{{ naviance.database }}
    username: {{ naviance.user }}
    password: {{ naviance.password }}
    driverClassName: com.mysql.jdbc.Driver
    testOnBorrow: true
    testWhileIdle: true
    validationQuery: SELECT 1
  cloud:
    config:
      discovery:
        enabled: false
      server:
        bootstrap: false
  profiles:
    active: oauth2

